{
  "name": "workout-tracker",
  "version": "1.0.0",
  "description": "A workout tracking application with JWT authentication and progress reporting",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "build": "npm run server:build && npm run client:build",
    "test": "npm run server:test && npm run client:test",
    "server:test": "cd server && npm test",
    "client:test": "cd client && npm test",
    "db:setup": "cd server && npm run db:setup",
    "db:seed": "cd server && npm run db:seed",
    "start": "cd server && npm start"
  },
  "keywords": ["workout", "tracker", "fitness", "api", "react", "nodejs"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 